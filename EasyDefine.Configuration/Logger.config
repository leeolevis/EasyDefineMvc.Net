<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net"
             type="System.Configuration.IgnoreSectionHandler" />
  </configSections>

  <log4net>
    <appender name="RollingLogFileAppender"
              type="log4net.Appender.RollingFileAppender">
      <!--指定日志保存文件，可以指定具体的路径 eg : d:\\debug.log。-->
      <file value="logs\\" />
      <!--变换的形式为日期-->
      <rollingStyle value="Date"/>
      <!--日期的格式-->
      <datePattern value="yyyyMM\\yyyyMMdd&quot;.log&quot;" />
      <!--以增量方式写入-->
      <appendToFile value="true" />
      <!--备份log文件的个数最多10个-->
      <maxSizeRollBackups value="10" />
      <!--每个log文件最大是2M，如果超过2M将重新创建一个新的log文件，并将原来的log文件备份。-->
      <maximumFileSize value="2MB" />
      <!--日志文件名是否为固定-->
      <staticLogFileName value="false" />
      <!--减少并发时发生死锁的概率-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <!--XML格式保存-->
      <!--<layout type="log4net.Layout.XmlLayout"/>-->
      <!--文本格式保存并指定log的文本格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%n[%date][%appdomain] [%thread] %n%location%n[%M] %-5level - %message%n" />
      </layout>
      <!--记录日志等级为“FATAL”和“ERROR”的日志信息-->
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="FATAL"/>
      </filter>
      <filter type="log4net.Filter.LevelMatchFilter">
        <levelToMatch value="ERROR"/>
      </filter>
      <!--在最后增加这个过滤器-->
      <filter type="log4net.Filter.DenyAllFilter"/>
    </appender>

    <appender name="ConsoleAppender"
              type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <!--指定log的格式-->
        <conversionPattern value="%n%location%n%-5p %c [%x] - %m   @%d [%t]%n" />
      </layout>

    </appender>
    <logger name="debugConsole">
      <level value="ALL"/>
      <appender-ref ref="ConsoleAppender" />
    </logger>

    <root>
      <level value="ALL" />
      <priority value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
</configuration>